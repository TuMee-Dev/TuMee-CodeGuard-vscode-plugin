{
  "name": "tumee-vscode-plugin",
  "displayName": "TuMee File and Folder Customization",
  "description": "Customize your files and folders based on human/AI attributes. Set colors, badges, or tooltips for any file or folder in your workspace based on ACL rules.",
  "version": "1.5.17",
  "license": "MIT",
  "icon": "resources/images/icon.png",
  "galleryBanner": {
    "color": "#4B0082",
    "theme": "dark"
  },
  "engines": {
    "vscode": "^1.92.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "folder",
    "file",
    "customization",
    "color",
    "badge",
    "tooltip",
    "human",
    "ai",
    "acl"
  ],
  "pricing": "Free",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "bin": {
    "visualguard": "./dist/cli/visualguard.js"
  },
  "snippets": [
    {
      "language": "*",
      "path": "./snippets/guard-tags.code-snippets"
    }
  ],
  "contributes": {
    "configuration": {
      "title": "TuMee File and Folder Customization",
      "properties": {
        "tumee-vscode-plugin.colorChangedFiles": {
          "title": "Color Changed Files",
          "type": "boolean",
          "description": "Ignore any color customizations set by the IDE when in a Git repository",
          "default": false
        },
        "tumee-vscode-plugin.aclCliPath": {
          "title": "ACL CLI Path",
          "type": "string",
          "description": "Path to the CodeGuard CLI tool for checking ACL status",
          "default": "codeguard"
        },
        "tumee-vscode-plugin.codeDecorationOpacity": {
          "title": "Code Region Opacity",
          "type": "number",
          "description": "The opacity of the code region decorations (0.0 to 1.0)",
          "default": 0.1,
          "minimum": 0,
          "maximum": 1
        },
        "tumee-vscode-plugin.decorationUpdateDelay": {
          "title": "Decoration Update Delay",
          "type": "number",
          "description": "Delay in milliseconds before updating decorations after document changes (100-1000ms)",
          "default": 300,
          "minimum": 100,
          "maximum": 1000
        },
        "tumee-vscode-plugin.maxFileSize": {
          "title": "Maximum File Size for Decorations",
          "type": "number",
          "description": "Maximum file size in bytes for applying decorations (default: 1MB)",
          "default": 1000000,
          "minimum": 100000,
          "maximum": 10000000
        },
        "tumee-vscode-plugin.enableChunkedProcessing": {
          "title": "Enable Chunked Processing",
          "type": "boolean",
          "description": "Process large files in chunks to improve responsiveness",
          "default": true
        },
        "tumee-vscode-plugin.chunkSize": {
          "title": "Chunk Size",
          "type": "number",
          "description": "Number of lines to process per chunk (default: 1000)",
          "default": 1000,
          "minimum": 100,
          "maximum": 5000
        },
        "tumee-vscode-plugin.enablePerformanceMonitoring": {
          "title": "Enable Performance Monitoring",
          "type": "boolean",
          "description": "Track and log performance metrics for debugging",
          "default": false
        },
        "tumee-vscode-plugin.enableDebugLogging": {
          "title": "Enable Debug Logging",
          "type": "boolean",
          "description": "Enable verbose debug logging for guard processing",
          "default": false
        },
        "tumee-vscode-plugin.cliWorkerTimeout": {
          "title": "CLI Worker Request Timeout",
          "type": "number",
          "description": "Timeout in milliseconds for CLI worker requests (5-30 seconds)",
          "default": 10000,
          "minimum": 5000,
          "maximum": 30000
        },
        "tumee-vscode-plugin.cliWorkerStartupTimeout": {
          "title": "CLI Worker Startup Timeout",
          "type": "number",
          "description": "Timeout in milliseconds for CLI worker startup (2-10 seconds)",
          "default": 5000,
          "minimum": 2000,
          "maximum": 10000
        },
        "tumee-vscode-plugin.cliWorkerAutoRestart": {
          "title": "Auto-restart CLI Worker",
          "type": "boolean",
          "description": "Automatically restart CLI worker if it crashes",
          "default": true
        },
        "tumee-vscode-plugin.guardColors": {
          "type": "object",
          "title": "Guard Tag Colors",
          "description": "Custom colors for guard tag highlighting",
          "properties": {
            "aiWrite": {
              "type": "string",
              "format": "color",
              "default": "#FFA500",
              "description": "Color for AI write access regions"
            },
            "aiRead": {
              "type": "string",
              "format": "color",
              "default": "#808080",
              "description": "Color for AI read access regions"
            },
            "aiNoAccess": {
              "type": "string",
              "format": "color",
              "default": "#90EE90",
              "description": "Color for AI no access regions"
            },
            "humanWrite": {
              "type": "string",
              "format": "color",
              "default": "#0000FF",
              "description": "Color for human write access regions"
            },
            "humanRead": {
              "type": "string",
              "format": "color",
              "default": "#D3D3D3",
              "description": "Color for human read access regions"
            },
            "humanNoAccess": {
              "type": "string",
              "format": "color",
              "default": "#FF0000",
              "description": "Color for human no access regions"
            },
            "contextRead": {
              "type": "string",
              "format": "color",
              "default": "#00CED1",
              "description": "Color for readable context regions"
            },
            "contextWrite": {
              "type": "string",
              "format": "color",
              "default": "#1E90FF",
              "description": "Color for writeable context regions"
            },
            "opacity": {
              "type": "number",
              "default": 0.3,
              "minimum": 0,
              "maximum": 1,
              "description": "Base opacity for guard tag highlights"
            },
            "aiTransparencyLevels": {
              "type": "object",
              "description": "Transparency multipliers for AI permission levels (1.0 = no change)",
              "properties": {
                "write": {
                  "type": "number",
                  "default": 1,
                  "minimum": 0,
                  "maximum": 1,
                  "description": "Transparency multiplier for AI write permission"
                },
                "read": {
                  "type": "number",
                  "default": 1,
                  "minimum": 0,
                  "maximum": 1,
                  "description": "Transparency multiplier for AI read permission"
                },
                "noAccess": {
                  "type": "number",
                  "default": 1,
                  "minimum": 0,
                  "maximum": 1,
                  "description": "Transparency multiplier for AI no access"
                }
              },
              "default": {
                "write": 1,
                "read": 1,
                "noAccess": 1
              }
            },
            "humanTransparencyLevels": {
              "type": "object",
              "description": "Transparency multipliers for human permission levels (1.0 = no change)",
              "properties": {
                "write": {
                  "type": "number",
                  "default": 0.3,
                  "minimum": 0,
                  "maximum": 1,
                  "description": "Transparency multiplier for human write permission"
                },
                "read": {
                  "type": "number",
                  "default": 0.6,
                  "minimum": 0,
                  "maximum": 1,
                  "description": "Transparency multiplier for human read permission"
                },
                "noAccess": {
                  "type": "number",
                  "default": 1,
                  "minimum": 0,
                  "maximum": 1,
                  "description": "Transparency multiplier for human no access"
                }
              },
              "default": {
                "write": 0.3,
                "read": 0.6,
                "noAccess": 1
              }
            },
            "useAiColorAsBase": {
              "type": "boolean",
              "default": true,
              "description": "If true, use AI colors as base with human transparency. If false, use human colors as base with AI transparency."
            },
            "aiRead_humanRead": {
              "type": "string",
              "format": "color",
              "description": "Color for AI read + human read (optional)"
            },
            "aiRead_humanWrite": {
              "type": "string",
              "format": "color",
              "description": "Color for AI read + human write (optional)"
            },
            "aiRead_humanNoAccess": {
              "type": "string",
              "format": "color",
              "description": "Color for AI read + human no access (optional)"
            },
            "aiWrite_humanRead": {
              "type": "string",
              "format": "color",
              "description": "Color for AI write + human read (optional)"
            },
            "aiWrite_humanWrite": {
              "type": "string",
              "format": "color",
              "description": "Color for AI write + human write (optional)"
            },
            "aiWrite_humanNoAccess": {
              "type": "string",
              "format": "color",
              "description": "Color for AI write + human no access (optional)"
            },
            "aiNoAccess_humanRead": {
              "type": "string",
              "format": "color",
              "description": "Color for AI no access + human read (optional)"
            },
            "aiNoAccess_humanWrite": {
              "type": "string",
              "format": "color",
              "description": "Color for AI no access + human write (optional)"
            },
            "aiNoAccess_humanNoAccess": {
              "type": "string",
              "format": "color",
              "description": "Color for AI no access + human no access (optional)"
            },
            "aiReadContext_humanRead": {
              "type": "string",
              "format": "color",
              "description": "Color for AI read context + human read (optional)"
            },
            "aiReadContext_humanWrite": {
              "type": "string",
              "format": "color",
              "description": "Color for AI read context + human write (optional)"
            },
            "aiReadContext_humanNoAccess": {
              "type": "string",
              "format": "color",
              "description": "Color for AI read context + human no access (optional)"
            },
            "aiWriteContext_humanRead": {
              "type": "string",
              "format": "color",
              "description": "Color for AI write context + human read (optional)"
            },
            "aiWriteContext_humanWrite": {
              "type": "string",
              "format": "color",
              "description": "Color for AI write context + human write (optional)"
            },
            "aiWriteContext_humanNoAccess": {
              "type": "string",
              "format": "color",
              "description": "Color for AI write context + human no access (optional)"
            }
          },
          "default": {
            "aiWrite": "#FFA500",
            "aiRead": "#808080",
            "aiNoAccess": "#90EE90",
            "humanWrite": "#0000FF",
            "humanRead": "#D3D3D3",
            "humanNoAccess": "#FF0000",
            "contextRead": "#00CED1",
            "contextWrite": "#1E90FF",
            "opacity": 0.3,
            "aiTransparencyLevels": {
              "write": 1,
              "read": 1,
              "noAccess": 1
            },
            "humanTransparencyLevels": {
              "write": 0.3,
              "read": 0.6,
              "noAccess": 1
            },
            "useAiColorAsBase": true
          }
        },
        "tumee-vscode-plugin.customThemes": {
          "type": "object",
          "title": "Custom Color Themes",
          "description": "User-defined color themes for guard tags",
          "default": {},
          "patternProperties": {
            ".*": {
              "type": "object",
              "description": "A custom theme configuration"
            }
          }
        },
        "tumee-vscode-plugin.selectedTheme": {
          "type": "string",
          "title": "Selected Theme",
          "description": "The currently selected guard tag color theme",
          "default": ""
        },
        "tumee-vscode-plugin.guardColorsComplete": {
          "type": "object",
          "title": "Complete Guard Tag Colors",
          "description": "Full color configuration including all properties",
          "default": {}
        },
        "tumee-vscode-plugin.items": {
          "type": "array",
          "title": "Files and Folders",
          "items": {
            "type": "object",
            "properties": {
              "path": {
                "type": "string",
                "description": "Path to the file or folder"
              },
              "type": {
                "type": "string",
                "description": "Type of the item (file, folder, or any)",
                "enum": [
                  "file",
                  "folder",
                  "any"
                ],
                "default": "any"
              },
              "badge": {
                "type": "string",
                "description": "Badge for the item",
                "maxLength": 2
              },
              "color": {
                "type": "string",
                "description": "Color for the item"
              },
              "tooltip": {
                "type": "string",
                "description": "Tooltip for the item"
              },
              "isHuman": {
                "type": "boolean",
                "description": "Whether this item is human-editable",
                "default": false
              },
              "isAI": {
                "type": "boolean",
                "description": "Whether this item is AI-editable",
                "default": false
              }
            },
            "required": [
              "path"
            ]
          },
          "default": []
        }
      }
    },
    "submenus": [
      {
        "id": "tumee-vscode-plugin.subMenu",
        "label": "TuMee Customization"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "explorerResourceIsFolder || resourceScheme == file",
          "group": "tumeeCustomization",
          "submenu": "tumee-vscode-plugin.subMenu"
        }
      ],
      "editor/context": [
        {
          "when": "editorTextFocus",
          "group": "tumeeGuardTags",
          "command": "tumee-vscode-plugin.setAIReadOnly"
        },
        {
          "when": "editorTextFocus",
          "group": "tumeeGuardTags",
          "command": "tumee-vscode-plugin.setAIWrite"
        },
        {
          "when": "editorTextFocus",
          "group": "tumeeGuardTags",
          "command": "tumee-vscode-plugin.setAINoAccess"
        },
        {
          "when": "editorTextFocus",
          "group": "tumeeGuardDeveloper",
          "command": "tumee-vscode-plugin.validateSectionParsing"
        }
      ],
      "tumee-vscode-plugin.subMenu": [
        {
          "command": "tumee-vscode-plugin.setColor",
          "group": "tumeeCustomization1@1"
        },
        {
          "command": "tumee-vscode-plugin.clearColor",
          "group": "tumeeCustomization1@2"
        },
        {
          "command": "tumee-vscode-plugin.setAsHuman",
          "group": "tumeeCustomization2@1"
        },
        {
          "command": "tumee-vscode-plugin.setAsAI",
          "group": "tumeeCustomization2@2"
        },
        {
          "command": "tumee-vscode-plugin.clearACL",
          "group": "tumeeCustomization2@3"
        },
        {
          "command": "tumee-vscode-plugin.setTextBadge",
          "group": "tumeeCustomization3@1"
        },
        {
          "command": "tumee-vscode-plugin.setEmojiBadge",
          "group": "tumeeCustomization3@2"
        },
        {
          "command": "tumee-vscode-plugin.clearBadge",
          "group": "tumeeCustomization3@3"
        },
        {
          "command": "tumee-vscode-plugin.setTooltip",
          "group": "tumeeCustomization4@1"
        },
        {
          "command": "tumee-vscode-plugin.clearTooltip",
          "group": "tumeeCustomization4@2"
        },
        {
          "command": "tumee-vscode-plugin.clearCustomization",
          "group": "tumeeCustomization5@1"
        },
        {
          "command": "tumee-vscode-plugin.resetWorkspace",
          "group": "tumeeCustomization5@2"
        }
      ]
    },
    "commands": [
      {
        "command": "tumee-vscode-plugin.setColor",
        "title": "Set Color",
        "category": "TuMee Customization"
      },
      {
        "command": "tumee-vscode-plugin.clearColor",
        "title": "Clear Color",
        "category": "TuMee Customization"
      },
      {
        "command": "tumee-vscode-plugin.setAsHuman",
        "title": "Set as Human-Editable",
        "category": "TuMee Customization"
      },
      {
        "command": "tumee-vscode-plugin.setAsAI",
        "title": "Set as AI-Editable",
        "category": "TuMee Customization"
      },
      {
        "command": "tumee-vscode-plugin.clearACL",
        "title": "Clear ACL Status",
        "category": "TuMee Customization"
      },
      {
        "command": "tumee-vscode-plugin.setAIReadOnly",
        "title": "Set AI Read-Only (@guard:ai:r)",
        "category": "TuMee Guard Tags"
      },
      {
        "command": "tumee-vscode-plugin.setAIWrite",
        "title": "Set AI Write Access (@guard:ai:w)",
        "category": "TuMee Guard Tags"
      },
      {
        "command": "tumee-vscode-plugin.setAINoAccess",
        "title": "Set AI No Access (@guard:ai:n)",
        "category": "TuMee Guard Tags"
      },
      {
        "command": "tumee-vscode-plugin.showGuardInfo",
        "title": "Show CodeGuard Info",
        "category": "TuMee Guard Tags"
      },
      {
        "command": "tumee-vscode-plugin.showGuardTagsReference",
        "title": "Show Guard Tags Reference",
        "category": "TuMee Guard Tags"
      },
      {
        "command": "tumee-vscode-plugin.showCliMissing",
        "title": "Show CLI Installation Help",
        "category": "TuMee Guard Tags"
      },
      {
        "command": "tumee-vscode-plugin.setTextBadge",
        "title": "Set Text Badge",
        "category": "TuMee Customization"
      },
      {
        "command": "tumee-vscode-plugin.setEmojiBadge",
        "title": "Set Emoji Badge",
        "category": "TuMee Customization"
      },
      {
        "command": "tumee-vscode-plugin.clearBadge",
        "title": "Clear Badge",
        "category": "TuMee Customization"
      },
      {
        "command": "tumee-vscode-plugin.setTooltip",
        "title": "Set Tooltip",
        "category": "TuMee Customization"
      },
      {
        "command": "tumee-vscode-plugin.clearTooltip",
        "title": "Clear Tooltip",
        "category": "TuMee Customization"
      },
      {
        "command": "tumee-vscode-plugin.clearCustomization",
        "title": "Clear All Customizations",
        "category": "TuMee Customization"
      },
      {
        "command": "tumee-vscode-plugin.resetWorkspace",
        "title": "Reset Workspace",
        "category": "TuMee Customization"
      },
      {
        "command": "tumee-vscode-plugin.customizeColors",
        "title": "Customize Guard Tag Colors",
        "category": "TuMee Customization",
        "icon": "$(symbol-color)"
      },
      {
        "command": "tumee-vscode-plugin.showPerformanceReport",
        "title": "Show Performance Report",
        "category": "TuMee Customization",
        "icon": "$(graph)"
      },
      {
        "command": "tumee-vscode-plugin.validateSectionParsing",
        "title": "Validate Section Parsing",
        "category": "CodeGuard Developer"
      },
      {
        "command": "tumee-vscode-plugin.showValidationOutput",
        "title": "Show Validation Output",
        "category": "CodeGuard Developer"
      }
    ],
    "colors": [
      {
        "id": "tumee.human",
        "defaults": {
          "dark": "#4CAF50",
          "light": "#4CAF50",
          "highContrast": "#4CAF50",
          "highContrastLight": "#4CAF50"
        },
        "description": "AI No Access color (green)"
      },
      {
        "id": "tumee.ai",
        "defaults": {
          "dark": "#F44336",
          "light": "#F44336",
          "highContrast": "#F44336",
          "highContrastLight": "#F44336"
        },
        "description": "AI write access color"
      },
      {
        "id": "tumee.humanAI",
        "defaults": {
          "dark": "#2196F3",
          "light": "#2196F3",
          "highContrast": "#2196F3",
          "highContrastLight": "#2196F3"
        },
        "description": "Mixed access color (blue, not currently used)"
      },
      {
        "id": "tumee.humanReadOnly",
        "defaults": {
          "dark": "#9C27B0",
          "light": "#9C27B0",
          "highContrast": "#9C27B0",
          "highContrastLight": "#9C27B0"
        },
        "description": "Human read-only access color (purple)"
      },
      {
        "id": "tumee.humanNoAccess",
        "defaults": {
          "dark": "#FF9800",
          "light": "#FF9800",
          "highContrast": "#FF9800",
          "highContrastLight": "#FF9800"
        },
        "description": "Human no access color (orange)"
      },
      {
        "id": "tumee.context",
        "defaults": {
          "dark": "#00BCD4",
          "light": "#00BCD4",
          "highContrast": "#00BCD4",
          "highContrastLight": "#00BCD4"
        },
        "description": "Context information color (cyan)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch --mode development",
    "package": "webpack --mode production --devtool hidden-source-map",
    "lint": "eslint src --ext ts",
    "lint:fix": "eslint src --ext ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "node ./tests/integration.test.js",
    "test:old": "node ./tests/line-count/focused-fix.js",
    "precommit": "npm run lint && npm run typecheck && npm run test"
  },
  "devDependencies": {
    "@types/node": "^20.17.46",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "copy-webpack-plugin": "^13.0.0",
    "eslint": "^8.57.0",
    "jsdom": "^26.1.0",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5",
    "webpack": "^5.99.8",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "commander": "^11.0.0"
  }
}
